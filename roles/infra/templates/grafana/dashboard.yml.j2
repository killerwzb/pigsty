# load dashboards from /etc/dashboards
apiVersion: 1
providers:

  - name: Pigsty
    orgId: 1
    type: file
    updateIntervalSeconds: 8
    allowUiUpdates: true
    options:
      path: /etc/dashboards/
      foldersFromFilesStructure: true
